<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/item_win_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/all_five"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:gravity="center"
            android:text="胜 "
            android:textColor="@drawable/region_text_color"
            android:background="@drawable/gray_to_red_checkbox_selector"
            android:textSize="@dimen/all_fifteen" />

        <CheckBox
            android:id="@+id/item_flat_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:gravity="center"
            android:text="平"
            android:padding="@dimen/all_five"
            android:textColor="@drawable/region_text_color"
            android:background="@drawable/gray_to_red_checkbox_selector"
            android:textSize="@dimen/all_fifteen" />

        <CheckBox
            android:id="@+id/item_lose_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:gravity="center"
            android:text="负"
            android:padding="@dimen/all_five"
            android:textColor="@drawable/region_text_color"
            android:background="@drawable/gray_to_red_checkbox_selector"
            android:textSize="@dimen/all_fifteen" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner_red"
        android:layout_marginTop="@dimen/all_ten"
        android:text="确 定"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>