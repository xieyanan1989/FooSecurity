<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="@dimen/all_zero"
            android:layout_height="match_parent"
            android:layout_weight="2" >
            <TextView
                android:id="@+id/jc_matched_tx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="456"
                android:textColor="@color/black"
                android:textSize="@dimen/all_thirteen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/all_zero"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_fifteen"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_home_tx"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_twenty"
                    android:layout_marginLeft="@dimen/all_fifteen"
                    android:gravity="center"
                    android:text="清水鼓动 VS 大阪钢巴"
                    android:textColor="@color/black"
                    android:textSize="@dimen/all_fifteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_hundred"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/jz_spf_edt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gray_to_red_checkbox_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="胜平负"
                        android:textColor="@drawable/region_text_color"
                        android:textSize="@dimen/all_fifteen"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <CheckBox
                        android:id="@+id/jz_rqspf_edt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/all_five"
                        android:layout_marginRight="@dimen/all_ten"
                        android:layout_weight="1"
                        android:background="@drawable/gray_to_red_checkbox_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="让球胜平负"
                        android:textColor="@drawable/region_text_color"
                        android:textSize="@dimen/all_fifteen"
                        android:singleLine="true"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/all_ten"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/jz_bf_edt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gray_to_red_checkbox_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="比分"
                        android:textColor="@drawable/region_text_color"
                        android:textSize="@dimen/all_fifteen"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <CheckBox
                        android:id="@+id/jz_bqc_edt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/all_five"
                        android:layout_weight="1"
                        android:background="@drawable/gray_to_red_checkbox_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="半全场"
                        android:textColor="@drawable/region_text_color"
                        android:textSize="@dimen/all_fifteen"
                        android:singleLine="true"
                        android:ellipsize="end" />

                    <CheckBox
                        android:id="@+id/jz_zjqs_edt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/all_five"
                        android:layout_marginRight="@dimen/all_ten"
                        android:layout_weight="1"
                        android:background="@drawable/gray_to_red_checkbox_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="总进球数"
                        android:textColor="@drawable/region_text_color"
                        android:textSize="@dimen/all_fifteen"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_five"
        android:layout_margin="@dimen/all_three"
        android:background="@mipmap/horizontal_line" >
    </LinearLayout>
</LinearLayout>